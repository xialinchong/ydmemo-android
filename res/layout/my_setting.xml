    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/menu_div2" />

    <RelativeLayout
        android:id="@+id/username_layout"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="@string/nickname"
            android:textColor="@color/subtitle" />

        <TextView
            android:id="@+id/nickname"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:paddingRight="25dp" />

        <Button
            android:id="@+id/select_username"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/mask_btn_selector"
            android:drawableRight="@drawable/detail"
            android:paddingRight="10dp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/menu_div2" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@drawable/menu_div2" />

    <RelativeLayout
        android:id="@+id/pwd_layout"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="@string/edit_pwd"
            android:textColor="@color/subtitle" />

        <Button
            android:id="@+id/select_pwd"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/mask_btn_selector"
            android:drawableRight="@drawable/detail"
            android:paddingRight="10dp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/menu_div2" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@drawable/menu_div2" />

    <RelativeLayout
        android:id="@+id/mark_layout"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="@string/mark_setting"
            android:textColor="@color/subtitle" />

        <Button
            android:id="@+id/select_mark"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/mask_btn_selector"
            android:drawableRight="@drawable/detail"
            android:paddingRight="10dp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/menu_div2" />
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@drawable/menu_div2" />

    <LinearLayout
        android:id="@+id/delay_layout"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@android:color/white"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="@string/delay_setting"
            android:textColor="@color/subtitle" />

        <RadioGroup
            android:id="@+id/delay_setting"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal" >
            
            <RadioButton
                android:id="@+id/five"
                android:text="@string/delay_5"
                android:layout_marginLeft="10dp"
                android:textColor="@color/subtitle" />
            
            <RadioButton
                android:id="@+id/ten"
                android:text="@string/delay_10"
                android:layout_marginLeft="10dp"
                android:textColor="@color/subtitle" />
            
            <RadioButton
                android:id="@+id/thirty"
                android:text="@string/delay_30"
                android:layout_marginLeft="10dp"
                android:textColor="@color/subtitle" />
            
            <RadioButton
                android:id="@+id/sixty"
                android:text="@string/delay_60"
                android:layout_marginLeft="10dp"
                android:textColor="@color/subtitle" />
            
        </RadioGroup>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/menu_div2" />
    
    
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@android:color/white"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/menu_div2" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp" >

                    <Button
                        android:id="@+id/notify_to_me_my_has_comment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/profile_button"
                        android:gravity="center|left"
                        android:paddingLeft="20dp"
                        android:textColor="@color/subtitle" 
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/notify_to_me_my_has_comment" />

                    <CheckBox
                        android:id="@+id/my_has_comment_chk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:clickable="false"
                        android:focusableInTouchMode="false" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/menu_div2" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp" >

                    <Button
                        android:id="@+id/notify_to_me_follow_has_comment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/profile_button"
                        android:gravity="center|left"
                        android:paddingLeft="20dp"
                        android:textColor="@color/subtitle" 
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/notify_to_me_follow_has_comment" />

                    <CheckBox
                        android:id="@+id/follow_has_comment_chk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:clickable="false"
                        android:focusableInTouchMode="false" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription=""
                    android:src="@drawable/menu_div2" />
            </LinearLayout>

</LinearLayout>