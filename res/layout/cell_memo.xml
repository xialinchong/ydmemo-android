<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:paddingTop="5dp" >

    <Button
        android:id="@+id/action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/LinearLayout2"
        android:layout_alignLeft="@+id/LinearLayout2"
        android:layout_alignRight="@+id/LinearLayout2"
        android:layout_alignTop="@+id/LinearLayout2"
        android:background="@drawable/memo_list_selector" />

    <RelativeLayout
        android:id="@+id/LinearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp" >

        <ImageButton
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/remove_selector"
            android:src="@null" />

        <TextView
            android:id="@+id/memoTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="70dp"
            android:layout_toRightOf="@+id/button1"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/placeholder"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/new_reminder_selector"
            android:src="@null" />

        <ImageButton
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="35dp"
            android:background="@drawable/new_comment_selector"
            android:src="@null" />

        <TextView
            android:id="@+id/button2_budge"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignRight="@+id/button2"
            android:layout_alignTop="@+id/button2"
            android:background="@drawable/budge"
            android:gravity="center"
            android:text="2"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@android:color/white"
            android:textSize="10sp" />
        
        <TextView
            android:id="@+id/button2_bottom_budge"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignBottom="@+id/button2"
            android:layout_alignRight="@+id/button2"
            android:background="@drawable/caogao"
            android:visibility="visible"
            android:gravity="center" />
        <ImageView
            android:id="@+id/button2_left_budge"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignLeft="@+id/button2"
            android:layout_alignBottom="@+id/button2"
            android:src="@drawable/alert"
            android:visibility="visible"
            android:gravity="center" />

        <TextView
            android:id="@+id/button3_budge"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignRight="@+id/button3"
            android:layout_alignTop="@+id/button3"
            android:background="@drawable/budge"
            android:gravity="center"
            android:text="1"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@android:color/white"
            android:textSize="10sp" />
    </RelativeLayout>

</RelativeLayout>